{
  "$schema": "https://raw.githubusercontent.com/nicmr/tauri-v2-json-schemas/main/tauri.conf.json/2.1.1.json",
  "productName": "CardFlow",
  "version": "1.0.0",
  "identifier": "com.cardflow.app",
  "build": {
    "beforeDevCommand": "yarn start",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "CardFlow - Visual Project Planning",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": []
      }
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
